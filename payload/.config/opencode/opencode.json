{
  "$schema": "https://opencode.ai/config.json",
  "lsp": false,
  "theme": "light",
  "instructions": [
    "~/ai-kb/AGENTS.md",
    "~/ai-kb/rules/INDEX.md",
    "~/ai-kb/commands/INDEX.md"
  ],
  "mcp": {
    "ck": {
      "type": "local",
      "command": [
        "bash",
        "-lc",
        "cd \"ai-kb\" 2>/dev/null || cd \"$HOME/ai-kb\" && exec ck --serve"
      ],
      "enabled": true,
      "timeout": 15000
    }
  },
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow",
    "doom_loop": "ask"
  },
  "experimental": {
    "disable_paste_summary": true
  }
}
